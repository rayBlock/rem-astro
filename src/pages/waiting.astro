---
import Base from "@/layouts/Base.astro";
import { markdownify } from "@/lib/utils/textConverter";
import { getLang } from "@/utils/i18n";
import { getEntry } from "astro:content";
import { Image } from 'astro:assets';

const waiting = await getEntry("waiting", "wait");
const { title, description, meta_title,  } = waiting.data;
const lang = getLang(Astro.url.pathname);
const { header1, header2, sub, text } = waiting.data[lang];
console.log(waiting.data[lang], "about");
---

<Base
  title={title}
  meta_title={meta_title}
  description={description}
  noFooter
>
  <section class="section px-4 pt-0 pb-0 my-14 mx-auto">
    <div class="container">
      <div class="flex flex-col items-center gap-20 justify-center mb-14">
        <Image src={'/images/flowa05.png'}  alt="flower logo image" width="120" height="120" />
        <div class="">
          <h3 set:html={markdownify(header1)} class="text-2xl text-center mb-4" />
          <p set:html={markdownify(header2)} class="text-center mb-8"/>
        </div>
        <p set:html={markdownify(sub)} class="text-center mb-8"/>
        <p set:html={markdownify(text)} class="text-center mb-8"/>

          
      </div>
    </div>
  </section>
</Base>
